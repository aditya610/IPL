<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auction.Biding"
         android:orientation="vertical"
        android:layout_marginLeft="10dp">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tvteamname"
              android:textSize="30dp"
              android:textAllCaps="true"
              android:textColor="#000000"
              android:layout_alignParentTop="true"
              android:gravity="center"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal">

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".auction.Biding"
android:layout_below="@id/tvteamname"
        android:id="@+id/ll"
        android:layout_marginLeft="10dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="Player Info"
              android:textColor="#000000"
    android:layout_marginTop="10dp"
    android:textSize="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:textSize="15dp"
    android:text="Name"
    android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvplayername"
            android:textSize="20dp"
            android:textColor="#000000"

            android:gravity="center"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="15dp"
              android:layout_marginTop="5dp"
              android:text="Price(Rs)"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/tvprice"
              android:textColor="#000000"


              android:textSize="20dp"
              android:gravity="center"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="13dp"
              android:text="Stats"
              android:layout_marginTop="5dp"
              android:id="@+id/tvstats"
    android:textColor="#0000FF"/>


    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
        <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Enter Price"
                android:inputType="number"
                android:id="@+id/etprice"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Teams"
                      android:textSize="20dp"
                      android:textColor="#000000"

                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="48dp"
            />
        <ListView
                android:layout_width="247dp"
                android:layout_height="200dp"
                android:layout_below="@id/tvteamname"
                android:layout_toRightOf="@id/ll"
                android:id="@+id/rvteams" android:layout_marginTop="0dp" android:layout_marginLeft="48dp"></ListView>
        </LinearLayout>
    </LinearLayout>
    <Button android:layout_width="100dp" android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:id="@+id/btnbid"
            android:text="bid"
            android:layout_gravity="center"
            />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="Current Bid"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/tvcurrentbid"
              android:textColor="#000000"

              android:layout_below="@id/btnbid"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Team"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/tvcurrentteam"
              android:textColor="#000000"
android:textAllCaps="true"
              android:layout_below="@id/tvcurrentbid"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/timer"
              android:textColor="#000000"
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="Next player"
            android:id="@+id/btnnextplayer"
    android:visibility="invisible"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="Exit"
    android:visibility="invisible"
    android:id="@+id/btnexit"/>

</LinearLayout>
